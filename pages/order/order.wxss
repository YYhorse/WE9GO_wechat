.linecolumngray{
  display: flex;
  width: 100%;
  flex-direction: row;
  border-bottom: 10px solid #ededed;
}

.OrderLayout{
  background: white;
  height:100%;
  display: flex;
  flex-direction: column;
}
.OrderItemLayout{
  display: flex;
  width: 100%;
  flex-direction: row;
  align-items: center;
  height: 80rpx;
  padding: 5px 0;
  margin-left: 20rpx;
  margin-right: 20rpx;
  border-bottom: 1px solid #ededed;
}
.OrderTime{
  display: flex;
  width: 200rpx;
  font-size: 15rpx;
  color:gray;
}
.MenuInfoLayout{
  width: 50%;
  overflow:hidden;      
  text-overflow:ellipsis;
  white-space:nowrap;  
  display: flex;
  flex-direction: row;
}
.MenuInfo{
  font-size: 30rpx;
  margin-left: 10rpx;
  color: black;
}
.MenuItemPrice{
  width: 100rpx;
  font-size: 30rpx;
  margin-left: 20rpx;
  color: red;
}

.SingerEndLayout{
  display: flex;
  width: 20%;
  flex-direction: row;
  justify-content:flex-end;
  align-items: center;           
}
.SingerRightImage{
  width:  20rpx;
  height: 20rpx;
  margin-top: 10rpx;
  
}