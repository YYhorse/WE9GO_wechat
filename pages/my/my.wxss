page{
  background-color: #F3F5F7;
  height: 100%;
  width: 100%;
}
.UserInfoLayout{
  display: flex;
  width: 100%;
  height: 200rpx;
  background-color: #47B118;
  flex-direction: row;
  align-items: center;
}
.AvatarImage{
  display: flex;
  width: 150rpx;
  height: 150rpx;
  margin: 0 20rpx;
  border-radius: 50%;
  margin-left: 50rpx;
  background: gray;
}
.NiceNameText{
  font-size: 20px;
  color: white;
  font-weight: bold;
  margin-left: 20rpx;
}
.PointText{
  font-size: 16px;
  color: white;
  margin-left: 20rpx;
}
.LineLayout{
  width: 100%;
  height: 10rpx;
  background-color: #d3d3d3;
}
.LineLayout2{
  width: 100%;
  height: 30rpx;
  background-color: #F3F5F7;
}
.SingerLayout{
  display: flex;
  width: 100%;
  height: 80rpx;
  flex-direction: row;
  align-items: center;
  padding: 5px 0;
  background: white;
  border-bottom: 1px solid #ededed;
}
.SingerImage{
  display: flex;
  width: 70rpx;
  height: 60rpx;
  margin-left: 20rpx;
}
.SingerText{
  font-size: 20px;
  color: #707070;
  margin-left: 30rpx;
  width: 400rpx;
}
.SingerEndLayout{
  display: flex;
  width: 70%;
  flex-direction: row;
  justify-content:flex-end;
  align-items: center;           
}
.SingerRightImage{
  width:  40rpx;
  height: 40rpx;
  margin-top: 10rpx;
}