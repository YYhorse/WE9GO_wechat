/**index.wxss**/
page{
  background-color: #F3F5F7;
  height: 100%;
  width: 100%;
}
.HideShowLayout{
  display: none
}
.TipAllowUserPermission{
  display: flex;
  height: 100%;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.MainLayout{
  display: flex;
  height: 100%;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.AllowPermissionButoon{
  display:flex;
  width: 300px;
  margin-top: 100rpx;
  flex-direction:row;
  align-items: center;
  justify-content:center;
  background: #47B118;
  color: white;
  border-radius: 8px;
}
.AllowPermissionText{
  display: flex;
  color: #aaa;
  font-size: 12px;
  margin-top: 30rpx;
}
.userinfo {
  display: flex;
  position: fixed;
  width: 100%;
  flex-direction: column;
  top: 50px;
  align-items: center;
  justify-content:center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
  font-size: 17px;
  font-weight: bold;
  margin-top: 10rpx;
}
.btnImage{
  display: flex;
}
.tipImage{
  display: flex;
  width: 128px;
  height: 128px;
}